@model ApplicationCore.Models.IncomeRequestModel


<div class="col-md-4">
    <form asp-action="CreateIncome" id="Form">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Amount" class="control-label"></label>
            <input asp-for="@Model.Amount" class="form-control" />

        </div>
        <div class="form-group">
            <label asp-for="Description" class="control-label"></label>
            <input asp-for="@Model.Description" class="form-control" />

        </div>
        <div class="form-group">
            <label asp-for="Remarks" class="control-label"></label>
            <input asp-for="@Model.Remarks" class="form-control" />

        </div>
        <div class="form-group">
            <label asp-for="IncomeDate" class="control-label"></label>
            <input asp-for="@Model.IncomeDate" class="form-control" />

        </div>
        <div class="form-group">
            <label asp-for="UserId" class="control-label"></label>
            <input asp-for="@Model.UserId" class="form-control" />

        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-primary btn-link" asp-action="CreateIncome"> Submit Changes</button>
        </div>
    </form>
</div>
            