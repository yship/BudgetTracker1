@using ApplicationCore.ServiceInterfaces;
@model ApplicationCore.Models.UserLoginResponseModel

@inject ICurrentUserService _CurrentUserService;


@if (_CurrentUserService.IsAuthenticated)
{
    // FirstName LastName and Email
    if (Model != null)
    {
        <div class="navbar-collapse collapse w-100 order-3">
            <nav class="nav nav-pills nav-fill">
               
                    <a class="nav-item nav-link disabled" href="#">@Model.FullName</a>
                    <a class="nav-item nav-link disabled" href="#"> @Model.Email</a>
                    <a class="btn btn-outline-primary" asp-controller="Account" asp-action="Logout">Logout</a>
               
            </nav>
        </div>
       
    }



    }else
    {
    <div class="navbar-collapse collapse w-100 order-3">
        <ul class="navbar-nav ml-auto">
            <li class="nav-item pr-4">
                <a class="btn btn-outline-primary" asp-controller="Account" asp-action="Login">Login</a>
            </li>
            <li class="nav-item">
                <a class="btn btn-outline-primary" asp-controller="Account" asp-action="Register">Register</a>
            </li>
        </ul>

    </div>
    }
